<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import net.starbs.antipleurdawn.ui.* ?>
<?import javafx.scene.image.ImageView?>
<StackPane>
    <BorderPane id="main">
        <top>
            <BorderPane id="topPanel">
                <left>
                    <HBox id="title">
                        <ImageView fitWidth="40" preserveRatio="true" smooth="true">
                            <Image url="https://negasaurus.starbs.net/logo.png">
                            </Image>
                        </ImageView>
                        <Label id="titleText" text="Anti-Chess" />
                    </HBox>
                </left>
                <right>
                    <StackPane>
                        <Label id="playerDesc" styleClass="up1, white" text="White Player" />
                    </StackPane>
                </right>
            </BorderPane>
        </top>
        <center>
            <Board styleClass="up1" id="board"/>
        </center>
        <left>
            <StackPane styleClass="panelCont1">
                <FlowPane prefWrapLength="130" id="yourCaptures" styleClass="panels, up1">
                </FlowPane>
            </StackPane>
        </left>
        <right>
            <StackPane styleClass="panelCont2">
                <FlowPane prefWrapLength="130" id="oppCaptures" styleClass="panels, up1">
                </FlowPane>
            </StackPane>
        </right>
    </BorderPane>
    <StackPane style="visibility: visible" id="overlay">
        <StackPane styleClass="overlayBackground">
        </StackPane>
    </StackPane>
    <StackPane style="visibility: hidden" id="waitingBox">
        <Label text="Waiting for other player ...">
        </Label>
    </StackPane>
    <Label style="visibility: hidden" id="winningLabel" text="You Win!" />
</StackPane>
